<article class="py-8" itemscope itemtype="https://schema.org/BlogPosting">

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'article_title' %}
      <div class="flex flex-col items-center justify-between">
        <div class="max-w-7xl text-center">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
          <h1 class="text-4xl md:text-6xl font-medium" itemprop="headline">{{ article.title }}</h1>
        </div>
      </div>
    {% when 'article_author' %}
      <div class="flex flex-col items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_author %}
            <small itemprop="author">{{ article.author }}</small>
          {% endif %}
        </div>
      </div>

    {% when 'article_published_date' %}
      <div class="flex flex-col items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_published_date %}
            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished dateCreated">
                {{ article.published_at | date: format: 'on_date' }}
            </time>
          {% endif %}          
        </div>
      </div>

    {% when 'featured_image' %}
      <div itemprop="image" class="flex flex-col max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
        {% if article.image %}
          <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | img_url: 'large' }}" loading="lazy" alt="{{ article.image.alt }}">
        {% else %}
          {% assign placeholder_image = 'lifestyle-1' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
        {% endif %}
      </div>
      
    {% when 'article_content' %}
      <div class="flex flex-col items-center justify-center">
        <div class="max-w-7xl" itemprop="articleBody">
          {{ article.content }}
        </div>
      </div>
    {% else %}

  {% endcase %}
{%  endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
  {% if article.comments_count > 0 %}
    <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
      <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>
      {% paginate article.comments by 5 %}
        {% comment %} <ul class="list-none p-0"> {% endcomment %}
          {% for comment in article.comments %}
            {% comment %} <li class="mb-4 p-4 border rounded bg-white shadow-sm"> {% endcomment %}
              <div class="flex-1 items-center justify-between mx-auto max-w-4xl px-4 mb-2">
                <span class="comment-author text-gray-700 font-semibold">{{ comment.author }}</span>
                <span class="text-gray-500 text-sm">{{ comment.created_at | date: '%B %d, %Y' }}</span>
                <p class="text-gray-800 text-sm">{{ comment.content }}</p>
              </div>
          {% endfor %}
          <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
          </div>
          {% comment %} {% if paginate.pages > 1 %}
            {{ paginate | default_pagination }}
          {% endif %} {% endcomment %}
      {% endpaginate %}
    </div>
  {% else %}
    <h2 class="text-2xl font-medium mb-4">Be the first to comment!</h2>
    <p class="mb-4">No comments yet. Share your thoughts about this article.</p>
  {% endif %}
  </div>
  <div id="comment-form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1- mx-auto items-center justify-center max-w-4xl px-4">
        {% if form.errors %}
          
          <div class="border p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Oh no! Your comment could not be posted. Please check the form and try again.
              </div>
            </div>
            <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                <li>
                  <span>{{ form.errors.messages[error] }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% elsif form.posted_successfully? %}
          <div class="flex flex-row items-center w-full my-3 p-5">
            <div class="text-green-500">
              {% render 'icon-success' %}
            </div>
            <div class="text-sm font-medium ml-3">
              Thank you for your comment! It will be visible once approved. Comment is posted successfully!
            </div>
          </div>
        {% endif %}
        <div class="px-1 md:flex mb-3">
          <div class="md:w-1/2 px-3">
            <label for="comment_name" class="text-gray-700 font-medium uppercase text-xs mb-2">Your Name</label>
            <input type="text" name="comment[author]" placeholder="Your Name" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none" required id="comment_name">
          </div>
          <div class="md:w-1/2 px-3">
            <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Your Email</label>
            <input type="email" name="comment[email]" placeholder="Your Email" class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none" required id="comment_email">
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label>
            <textarea name="comment[body]" id="comment_content" rows="5" class="w-full text-gray-700 resize-none hy-20 py-2 px-3 border rounded mb-4 focus:outline-none" placeholder="Your comment here..." required></textarea>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <button type="submit" class="w-full cursor-pointer bg-blue-500 text-white text-base font-medium px-4 py-2 border rounded">Submit Comment</button>
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ article.title | json }}",
    "articleBody": "{{ article.content | strip_html | json }}",
    {% if article.excerpt != blank %}
      "description": {{ article.excerpt | strip_html | json }},
    {% endif %}
    {%  if article.image != blank %}
      "image": [
        {{ article.image | img_url: "medium" | prepend: "https" | json }}
      ],
    {% endif %}
    "datePublished": {{ article.published_at | date: format: "default" | json }},
    "dateCreated": {{ article.created_at | date: format: "default" | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      "name": {{ shop.name | json }},
      "logo": {
        "@type": "ImageObject",
        "url": {{ shop.logo | img_url: "medium" | prepend: "https" | json }}
      }
    }
</script>

{% schema %}
{
  "name": "Article Template",
  "settings": [
    {
        "type": "checkbox",
        "id": "enable_author",
        "label": "Display Author Name",
        "default": true
    },
    {
        "type": "checkbox",
        "id": "enable_published_date",
        "label": "Display Published Date",
        "default": true
    },
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Article Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Article Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Article Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Article Content",
      "limit": 1
    },
  ],
  "presets": [
    {
      "name": "Default Article Template",
      "category": "Articles"
    }
  ]
}

{% endschema %}
<article class="py-8">

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'article_title' %}
      <div class="flex flex-col items-center justify-between">
        <div class="max-w-7xl text-center">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
          <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
        </div>
      </div>
    {% when 'article_author' %}
      <div class="flex flex-col items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_author %}
            <small>{{ article.author }}</small>
          {% endif %}
        </div>
      </div>

    {% when 'article_published_date' %}
      <div class="flex flex-col items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_published_date %}
            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                {{ article.published_at | date: format: 'on_date' }}
            </time>
          {% endif %}          
        </div>
      </div>

    {% when 'featured_image' %}
      <div class="flex flex-col max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
        {% if article.image %}
          <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | img_url: 'large' }}" loading="lazy" alt="{{ article.image.alt }}">
        {% else %}
          {% assign placeholder_image = 'lifestyle-1' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
        {% endif %}
      </div>
      
    {% when 'article_content' %}
      <div class="article-content">
          {{ article.content }}
      </div>
    {% else %}

  {% endcase %}
{%  endfor %}
</article>

{% schema %}
{
  "name": "Article Template",
  "settings": [
    {
        "type": "checkbox",
        "id": "enable_author",
        "label": "Display Author Name",
        "default": true
    },
    {
        "type": "checkbox",
        "id": "enable_published_date",
        "label": "Display Published Date",
        "default": true
    },
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Article Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Article Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Article Published Date",
      "limit": 1
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Article Content",
      "limit": 1
    },
  ],
  "presets": [
    {
      "name": "Default Article Template",
      "category": "Articles"
    }
  ]
}

{% endschema %}
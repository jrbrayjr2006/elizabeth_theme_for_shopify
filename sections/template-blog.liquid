<div class="py-8">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1 class="text-center text-3xl">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              {% if article.image %}
                <img class="w-full h-80 object-cover" src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt | escape }}" />
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
              {% endif %}
              <h2 class="text-xl font-medium my-4">{{ article.title }}</h2>
              {% if article.excerpt.size > 0 %}
                <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
              {% else %}
                <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
              {% endif %}

              <a href="{{ article.url }}" class="block py-4 text-center text-blue-500 hover:underline hover:text-blue-800">{{ section.settings.blog_read_more }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

  {% endpaginate %}
</div>


{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "text",
      "id": "blog_read_more",
      "label": "Read more label",
      "default": "Read more"
    },
    {
      "type": "range",
      "id": "number_of_blog_posts",
      "label": "Number of blog posts",
      "min": 1,
      "max": 15,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Blog",
      "category": "Blog"
    }
  ]
}
{% endschema %}
{% if cart.item_count > 0 %}
    <h1>Cart</h1>
{% else %}
    <div class="flex mx-auto items-center justify-center max-w-6xl h-60 m-4">
        <div class="text-center">
            <h1 class="text-3xl font-bold my-4">Your cart is empty</h1>
            <div class="my-4 py-4">
                <a href="{{ routes.all_products_collection_url }}" class="border border-gray-600 text-white bg-gray-600 px-8 py-3">Continue Shopping</a>
            </div>
        </div>
    </div>
{% endif %}
<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Sign In</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                <div class="my-2">
                    <label for="email_address" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-1">
                        <input id="email_address" name="customer[email]" type="email" autocomplete="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    </div>
                </div>
            {% endform %}
        </div>
    </div>
    <div class="max-w-md w-full space-y-8"></div>
</div>
<div class="flex h-full items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ showLogin: true, passwordRecover: false }">
    <div x-show="showLogin" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Sign In</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="border border-red-400 bg-red-100 text-red-700 text-sm px-4 py-3 rounded relative mb-4" role="alert">
                        <strong class="font-bold">Error:</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email_address" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-1">
                        <input id="email_address" name="customer[email]" type="email" autocomplete="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    </div>
                </div>
                {% if form.password_needed %}
                    <div class="my-2">
                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <div class="mt-1">
                            <input id="password" name="customer[password]" type="password" autocomplete="current-password" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                    </div>
                {% endif %}
                <div class="my-2 text-sm">
                    <a href="#" x-on:click="showLogin = false; passwordRecover = true" class="font-medium underline text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
                </div>
                <div>
                    <button type="submit" class="relative w-full my-2 mx-4 bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Sign In</button>
                </div>
            {% endform %}
        </div>
    </div>
    <div x-show="passwordRecover" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold mt-6">Recover Password</h1>
        </div>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="border border-red-400 bg-red-100 text-red-700 text-sm px-4 py-3 rounded relative mb-4" role="alert">
                        <strong class="font-bold">Error:</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}
                <div class="my-2">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-1">
                        <input id="email" name="email" type="email" autocomplete="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    </div>
                </div>
                <div>
                    <button type="submit" class="relative w-full my-2 mx-4 bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Recover Password</button>
                </div>
                <div class="mt-8 text-sm">
                    <a href="#" x-on:click="showLogin = true; passwordRecover = false" class="font-medium underline text-indigo-600 hover:text-indigo-500">Back to Sign In</a>
                </div>
            {% endform %}
        </div>
    </div>
</div>